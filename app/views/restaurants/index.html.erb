<div class="container" style="margin-top: 50px">
  <div class="d-flex justify-content-between" style="margin-bottom: 10px">
  <h1>All restaurants</h1>
  <button type="button" class="btn btn-outline-primary"><%=link_to 'Create new', new_restaurant_path%></button>
  </div>

  <table class="table table-hover table-sm" style="width:1100px">
  <thead>
    <tr>
      <th>#</th>
      <th>Name</th>
      <th>Address</th>
      <th>Category</th>
      <th>Phone</th>
    </tr>
  </thead>
  <tbody>
    <% @restaurants.each do |restaurant| %>
    <tr>
      <th><%=restaurant.id%></th>
      <td><%=link_to restaurant.name, restaurant_path(restaurant)%></td>
      <td><%=restaurant.address%></td>
      <td><%=restaurant.category%></td>
      <td><%=restaurant.phone_number%></td>
    </tr>
    <% end %>
  </tbody>
</table>
</div>
