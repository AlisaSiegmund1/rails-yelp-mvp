<div class="container" style="margin-top: 50px">
  <h1>Details</h1>

  <table class="table table-hover table-sm" style="width:1100px">
    <thead>
      <tr>
        <th>#</th>
        <th>Name</th>
        <th>Address</th>
        <th>Category</th>
        <th>Phone</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th><%=@restaurant.id%></th>
        <td><%=@restaurant.name%></td>
        <td><%=@restaurant.address%></td>
        <td><%=@restaurant.category%></td>
        <td><%=@restaurant.phone_number%></td>
      </tr>
    </tbody>
  </table>

  <div style="margin-top: 50px;">
    <% @restaurant.reviews.each do |review|%>
      <div class="card border-secondary mb-3" style="max-width: 50rem;">
        <div class="card-header">Rating: <%= review.rating %> </div>
        <div class="card-body text-secondary">
          <p class="card-text"><%= review.content %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div>
    <button type="button" class="btn btn-outline-primary"><%=link_to 'Back to overview', restaurants_path%></button>
    <button type="button" class="btn btn-outline-primary"><%=link_to 'Create a review', new_restaurant_review_path(@restaurant)%></button>
  </div>
</div>
